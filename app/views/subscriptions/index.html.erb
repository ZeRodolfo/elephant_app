<% content_for(:html_title) { 'Elephant - Gerenciamento Para Psicologia Clínica | Home - Assinatura' } %>

<%= render 'shared/navbar' %>

<section class="d-flex m-0 align-items-start justify-content-center el min100">
  <div class="bounding generic-form">
    <h1 class="bold">Bem vindo (a) <br> ao sistema Elephant!</h1>

    <div class="mt-3 mt-lg-5">
      <% if @active %>
        <h6 class="phrase">
          Você já possui uma assinatura ativa.
        </h6>

        <%= link_to 'Comece a usar', home_path, class: 'mt-3 mt-lg-5 btn btn-primary btn-block' %>
      <% else %>
        <p class="phrase">
          Você não possui uma assinatura ativa.
        </p>
        <p class="phrase light">É necessário definir uma forma de pagamento para utilizar o sistema.</p>

        <%= link_to 'Adicionar forma de pagamento', new_subscription_path, class: 'mt-3 mt-lg-5 btn btn-primary btn-block' %>
      <% end %>
    </div>
  </div>
</section>
