<% content_for(:html_title) { 'Elephant - Gerenciamento Para Psicologia ClÃ­nica | Esqueceu sua senha?' } %>

<%= render 'shared/public-navbar-full' %>

<section class="d-flex m-0 align-items-start justify-content-center el min100">
  <div class="bounding generic-form">
    <h1 class="bold"><%= t('.forgot_your_password') %></h1>
    <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
      <div class="form-row">
        <div class="form-group col">
          <%= f.label :email, for: 'email' %>
          <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control #{ 'is-invalid' if resource.errors[:email].any? }" %>
          <% if resource.errors[:email].any? %>
            <div class="invalid-feedback">
              <% resource.errors[:email].each do |m| %>
                <%= m %>
                <br>
              <% end %>
            </div>
          <% end %>
        </div>
      </div>
      <%= f.submit t('.send_me_reset_password_instructions'), class: 'mt-2 btn btn-primary btn-block' %>
    <% end %>
  </div>
</section>
